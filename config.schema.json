{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "3EM Energy Meter",
  "description": "Platform for Shelly EM single-phase energy meters",
  "properties": {
    "platforms": {
      "type": "array",
      "title": "Platforms",
      "items": {
        "type": "object",
        "properties": {
          "platform": {
            "type": "string",
            "default": "3EMEnergyMeter",
            "description": "Platform type"
          },
          "name": {
            "type": "string",
            "default": "3EMEnergyMeter",
            "description": "Platform name",
            "minLength": 1
          },
          "devices": {
            "type": "array",
            "title": "Devices",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "title": "Device ID",
                  "description": "Unique identifier for this device",
                  "minLength": 1
                },
                "name": {
                  "type": "string",
                  "title": "Device Name",
                  "description": "Name of the device",
                  "minLength": 1
                },
                "host": {
                  "type": "string",
                  "title": "Device Host",
                  "description": "IP address of the Shelly EM",
                  "format": "ipv4"
                }
              },
              "required": ["id", "name", "host"]
            }
          }
        },
        "required": ["platform", "name", "devices"]
      }
    }
  },
  "required": ["platforms"]
}