{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "3EM Energy Meter",
  "type": "object",
  "required": ["name", "platforms"],
  "properties": {
    "name": {
      "title": "Homebridge Name",
      "type": "string",
      "default": "Homebridge"
    },
    "platforms": {
      "title": "Platforms",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["platform", "name", "devices"],
        "properties": {
          "platform": {
            "title": "Platform",
            "type": "string",
            "enum": ["3EMEnergyMeter"]
          },
          "name": {
            "title": "Platform Name",
            "type": "string",
            "default": "3EMEnergyMeter"
          },
          "devices": {
            "title": "Devices",
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "name", "host"],
              "properties": {
                "id": {
                  "title": "Device ID",
                  "type": "string",
                  "description": "Unique identifier for this energy meter"
                },
                "name": {
                  "title": "Device Name",
                  "type": "string",
                  "description": "Name of the energy meter accessory"
                },
                "host": {
                  "title": "Host",
                  "type": "string",
                  "description": "IP address of the Shelly EM device"
                }
              }
            }
          }
        }
      }
    }
  }
}