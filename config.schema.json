{
  "pluginAlias": "3EMEnergyMeter",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Shelly 3EM / EM Energy Meter Plugin",
  "footerDisplay": "This plugin supports Shelly EM (single-phase) and 3EM (three-phase). Values will be exposed in the Eve app.",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Shelly Energy Meters"
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Device Name",
              "type": "string"
            },
            "ip": {
              "title": "Device IP Address",
              "type": "string"
            },
            "use_em": {
              "title": "Shelly EM (single-phase)",
              "type": "boolean",
              "default": false
            },
            "use_em_mode": {
              "title": "EM Channel (0 or 1)",
              "type": "integer",
              "default": 0
            }
          }
        }
      }
    }
  }
}