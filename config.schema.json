{
  "pluginAlias": "3EMEnergyMeter",
  "pluginType": "platform",
  "headerDisplay": "Shelly 3EM Energy Meter Platform",
  "singular": false,
  "schema": {
    "type": "object",
    "required": ["name", "devices"],
    "properties": {
      "name": {
        "type": "string",
        "title": "Platform Name",
        "default": "3EMEnergyMeter"
      },
      "devices": {
        "type": "array",
        "title": "Devices",
        "items": {
          "type": "object",
          "required": ["id", "name", "host"],
          "properties": {
            "id": {
              "type": "string",
              "title": "Device ID",
              "description": "Unique identifier for this Shelly EM device"
            },
            "name": {
              "type": "string",
              "title": "Device Name",
              "description": "The name that will appear in HomeKit/Eve"
            },
            "host": {
              "type": "string",
              "title": "Device IP",
              "description": "The IP address of the Shelly EM"
            },
            "auth": {
              "type": "object",
              "title": "Optional HTTP Auth",
              "properties": {
                "user": {
                  "type": "string",
                  "title": "Username"
                },
                "pass": {
                  "type": "string",
                  "title": "Password"
                }
              }
            }
          }
        }
      }
    }
  }
}