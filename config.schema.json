{
  "pluginAlias": "3EMEnergyMeter",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Shelly 3EM Energy Meter Plugin",
  "footerDisplay": "This accessory will only be supported in the third-party HomeKit app EVE.",
  "schema": {
    "type": "object",
    "required": ["name", "devices"],
    "properties": {
      "name": {
        "title": "Platform Name",
        "type": "string",
        "default": "3EMEnergyMeter",
        "description": "The name of the platform displayed in Homebridge."
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "description": "List of Shelly EM devices to monitor",
        "items": {
          "type": "object",
          "required": ["id", "name", "host"],
          "properties": {
            "id": {
              "title": "Device ID",
              "type": "string",
              "description": "Unique ID for this device."
            },
            "name": {
              "title": "Device Name",
              "type": "string",
              "description": "Name displayed in HomeKit."
            },
            "host": {
              "title": "Host",
              "type": "string",
              "description": "IP address of the Shelly EM device."
            }
          }
        }
      }
    }
  }
}