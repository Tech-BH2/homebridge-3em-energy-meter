{
  "pluginAlias": "3EMEnergyMeter",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Shelly 3EM / EM Energy Meter Plugin",
  "footerDisplay": "Add Shelly 3EM (3-phase) or Shelly EM (single-phase) devices here. Values are exposed to the Eve app and recorded to history.",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Platform Name",
        "type": "string",
        "default": "Shelly Energy Meters"
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "items": {
          "type": "object",
          "required": ["name", "ip"],
          "properties": {
            "name": {
              "title": "Device Name",
              "type": "string"
            },
            "ip": {
              "title": "Device IP Address",
              "type": "string"
            },
            "use_em": {
              "title": "Shelly EM (single-phase) mode",
              "type": "boolean",
              "default": false
            },
            "use_em_mode": {
              "title": "EM Channel mode (0 = combine ch1+ch2, 1 = channel1, 2 = channel2)",
              "type": "integer",
              "default": 0,
              "enum": [0, 1, 2]
            },
            "update_interval": {
              "title": "Update interval (ms)",
              "type": "integer",
              "default": 10000,
              "minimum": 2000
            },
            "timeout": {
              "title": "HTTP timeout (ms)",
              "type": "integer",
              "default": 5000,
              "minimum": 1000
            }
          }
        }
      }
    }
  }
}